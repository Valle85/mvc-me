{% extends "base.html.twig" %}

{% block title %}Game21{% endblock %}
{% block main %}
    <h1>Spelet 21</h1>

    <p>Dina kort:</p>
    <div>
        {% for card in hand %}
            <span class="card">{{ card|raw }}</span>
        {% endfor %}
    </div>

    <p><strong>Total poäng:</strong> {{ total }}</p>

    <div class="game-buttons">
    <form method="post" action="{{ path('game_draw') }}">
        <button type="submit">🎴 Dra ett kort</button>
    </form>

    <form method="post" action="{{ path('game_stay') }}">
        <button type="submit">🛑 Stanna</button>
    </form>

    <form method="post" action="{{ path('game_reset') }}">
        <button type="submit">🔁 Ny runda</button>
    </form>
    </div>

    {% if app.session.get('game21_result') %}
        <h2>Resultat: {{ app.session.get('game21_result') }}</h2>
    {% endif %}
{% endblock %}
