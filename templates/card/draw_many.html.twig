{% extends "base.html.twig" %}

{% block title %}Dra flera kort{% endblock %}

{% block main %}
<h1>Dra {{ requested }} kort</h1>

{% if cards is empty %}
    <p>Det finns inga kort kvar i leken!</p>
{% else %}
    <p>Du drog f√∂ljande kort:</p>
    <div>
        {% for card in cards %}
            <span class="card">{{ card.getAsString() }}</span>
        {% endfor %}
    </div>
    <p>Kvar i leken: {{ cardsLeft }} kort</p>
{% endif %}

<p><a href="{{ path('card_home') }}">Tillbaka till kortmeny</a></p>
{% endblock %}
